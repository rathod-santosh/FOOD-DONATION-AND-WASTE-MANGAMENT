<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Donate</title>
    <link rel="stylesheet" href="/css/loginstyle.css">
    <link rel="stylesheet" href="/css/abc.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
</head>



<body>
    <header>



        <div class="hamburger">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
        </div>

        <%- include("navbar"); %>
    </header>
    <div class="container">
        <div class="regformf">
            <form action="/donate" method="POST">
                <p class="logo">Food <b style="color: #06C167;">Donate</b></p>

                <!-- Food Name -->
                <div class="input">
                    <label for="foodname"><i class="fas fa-utensils"></i> Food Name:</label>
                    <input type="text" id="foodname" name="foodname" required />
                </div>

                <!-- Meal Type -->
                <div class="radio">
                    <label for="meal"><i class="fas fa-drumstick-bite"></i> Meal Type:</label>
                    <br><br>
                    <input type="radio" name="meal" id="veg" value="veg" required />
                    <label for="veg" style="padding-right: 40px;">Veg</label>
                    <input type="radio" name="meal" id="non-veg" value="non-veg">
                    <label for="non-veg">Non-Veg</label>
                </div>

                <br>

                <!-- Food Category (Fully Fixed Selection) -->
                <!-- Food Category -->
                <div class="input">
                    <label><i class="fas fa-tags"></i> Select the Category:</label>
                    <br><br>
                    <div class="image-radio-group">
                        <!-- Raw Food Category -->
                        <input type="radio" id="raw-food" name="category" value="raw-food" required>
                        <label for="raw-food">
                            <img src="/img/raw-food.png" alt="Raw Food">
                            <p>Raw Food</p>
                        </label>

                        <!-- Cooked Food Category -->
                        <input type="radio" id="cooked-food" name="category" value="cooked-food">
                        <label for="cooked-food">
                            <img src="/img/cooked-food.png" alt="Cooked Food">
                            <p>Cooked Food</p>
                        </label>

                        <!-- Packed Food Category -->
                        <input type="radio" id="packed-food" name="category" value="packed-food">
                        <label for="packed-food">
                            <img src="/img/packed-food.png" alt="Packed Food">
                            <p>Packed Food</p>
                        </label>
                    </div>
                </div>


                <!-- Quantity -->
                <div class="input">
                    <label for="quantity"><i class="fas fa-weight-hanging"></i> Quantity (number of persons /
                        kg):</label>
                    <input type="text" id="quantity" name="quantity" required />
                </div>

                <b>
                    <p style="text-align: center;"><i class="fas fa-address-book"></i> Contact Details</p>
                </b>

                <!-- Contact Details -->
                <div class="input">
                    <label for="name"><i class="fas fa-user"></i> Name:</label>
                    <input type="text" id="name" name="name" value="<%= name %>" required />

                    <label for="phoneno"><i class="fas fa-phone"></i> Phone No:</label>
                    <input type="text" id="phoneno" name="phoneno" maxlength="10" pattern="[0-9]{10}" required />
                </div>

                <!-- Location -->
                <div class="input">
                    <label for="district"><i class="fas fa-city"></i> District:</label>
                    <input type="text" id="district" name="district" required />

                    <label for="address" style="padding-left: 10px;"><i class="fas fa-home"></i> Address:</label>
                    <input type="text" id="address" name="address" required />
                </div>

                <div class="btn">
                    <button type="submit"><i class="fas fa-paper-plane"></i> Submit</button>
                </div>
            </form>
        </div>
    </div>
</body>

</html>