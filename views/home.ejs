<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Donate - Making a Difference in India</title>
    <link rel="stylesheet" href="/css/abc.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }

        .hero {
           background-image: url('/img/coverimage.jpeg');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 100px 0;
            text-align: center;
            animation: fadeIn 2s ease;
        }

        .hero h1 {
            font-size: 3rem;
            margin-bottom: 20px;
        }

        .hero p {
            font-size: 1.2rem;
            margin-bottom: 40px;
        }

        .cta-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .btn {
            padding: 12px 30px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn.primary {
            background: #06C167;
            color: white;
        }

        .btn.primary:hover {
            background: #05a056;
            transform: translateY(-3px);
        }

        .btn.secondary {
            background: transparent;
            color: white;
            border: 2px solid white;
        }

        .btn.secondary:hover {
            background: white;
            color: #667eea;
        }

        section {
            padding: 80px 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        h2 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 40px;
            color: #333;
        }

        .donation-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
        }

        .donation-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            animation: slideUp 1s ease;
            animation-delay: 0.2s;
            opacity: 0;
            animation-fill-mode: forwards;
        }

        .donation-card:nth-child(2) {
            animation-delay: 0.4s;
        }

        .donation-card:nth-child(3) {
            animation-delay: 0.6s;
        }

        .donation-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .card-content {
            padding: 20px;
        }

        .card-content h3 {
            margin-bottom: 10px;
            color: #333;
        }

        .btn-card {
            display: inline-block;
            margin-top: 15px;
            padding: 8px 20px;
            background: #06C167;
            color: white;
            text-decoration: none;
            border-radius: 20px;
            transition: background 0.3s ease;
        }

        .btn-card:hover {
            background: #05a056;
        }

        .impact-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
        }

        .stat {
            text-align: center;
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            animation: slideUp 1s ease;
            animation-delay: 0.8s;
            opacity: 0;
            animation-fill-mode: forwards;
        }

        .stat:nth-child(2) {
            animation-delay: 1s;
        }

        .stat:nth-child(3) {
            animation-delay: 1.2s;
        }

        .stat:nth-child(4) {
            animation-delay: 1.4s;
        }

        .stat i {
            font-size: 3rem;
            color: #06C167;
            margin-bottom: 20px;
        }

        .stat h3 {
            font-size: 2rem;
            margin-bottom: 10px;
            color: #333;
        }

        .process-steps {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
        }

        .step {
            text-align: center;
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
            animation: slideUp 1s ease;
            animation-delay: 1.6s;
            opacity: 0;
            animation-fill-mode: forwards;
        }

        .step:nth-child(2) {
            animation-delay: 1.8s;
        }

        .step:nth-child(3) {
            animation-delay: 2s;
        }

        .step:nth-child(4) {
            animation-delay: 2.2s;
        }

        .step-icon {
            font-size: 3rem;
            color: #06C167;
            margin-bottom: 20px;
        }

        .testimonial-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
        }

        .testimonial-card {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            animation: slideUp 1s ease;
            animation-delay: 2.4s;
            opacity: 0;
            animation-fill-mode: forwards;
        }

        .testimonial-card:nth-child(2) {
            animation-delay: 2.6s;
        }

        .testimonial-card img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            margin-bottom: 15px;
        }

        .emergency-support {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            text-align: center;
            animation: fadeIn 1s ease;
            animation-delay: 2.8s;
            opacity: 0;
            animation-fill-mode: forwards;
        }

        .footer {
            background: #333;
            color: white;
            padding: 40px 0;
        }

        .footer-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 30px;
        }

        .footer-section h3 {
            margin-bottom: 20px;
            color: #06C167;
        }

        .footer-section ul {
            list-style: none;
            padding: 0;
        }

        .footer-section ul li {
            margin-bottom: 10px;
        }

        .footer-section ul li a {
            color: white;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-section ul li a:hover {
            color: #06C167;
        }

        .social-links {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }

        .social-links a {
            color: white;
            font-size: 1.5rem;
            transition: color 0.3s ease;
        }

        .social-links a:hover {
            color: #06C167;
        }

        .contact-info p {
            margin-bottom: 5px;
        }

        .footer-bottom {
            text-align: center;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #555;
        }

        .follow-content {
            display: block;
        }

        .follow-content .social-links {
            margin-bottom: 20px;
        }

        .follow-content .contact-info {
            text-align: left;
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
            }
        }

        @keyframes slideUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <header>




        <%- include("navbar"); %>
    </header>

    <main>
        <section class="hero">
            <div class="hero-overlay"></div>
            <div class="hero-content">
                <h1>Every Meal Matters.<br>Every Action Counts.</h1>
                <p>Join thousands making a difference in fighting hunger across India</p>
                <div class="cta-buttons">
                    <a href="/donate" class="btn primary">Donate Now</a>
                    <a href="#how-it-works" class="btn secondary">Learn How</a>
                </div>
            </div>
        </section>

        <section id="donate-options" class="donation-types">
            <div class="container">
                <h2>Ways to Make a Difference</h2>
                <div class="donation-grid">
                    <div class="donation-card">
                        <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-4.0.3"
                            alt="Restaurant Food">
                        <div class="card-content">
                            <h3>Restaurant Food</h3>
                            <p>Donate surplus food from your restaurant</p>
                            <a href="/donate" class="btn-card">Donate Now</a>
                        </div>
                    </div>
                    <div class="donation-card">
                        <img src="https://images.unsplash.com/photo-1506617564039-2f3b650b7010?ixlib=rb-4.0.3"
                            alt="Catering Excess">
                        <div class="card-content">
                            <h3>Event & Catering</h3>
                            <p>Share excess food from events</p>
                            <a href="/donate" class="btn-card">Donate Now</a>
                        </div>
                    </div>
                    <div class="donation-card">
                        <img src="https://images.unsplash.com/photo-1542838132-92c53300491e?ixlib=rb-4.0.3"
                            alt="Grocery Items">
                        <div class="card-content">
                            <h3>Grocery Items</h3>
                            <p>Donate non-perishable food items</p>
                            <a href="/donate" class="btn-card">Donate Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="impact">
            <div class="container">
                <h2>Our Impact So Far</h2>
                <div class="impact-stats">
                    <div class="stat">
                        <i class="fas fa-utensils"></i>
                        <h3>100,000+</h3>
                        <p>Meals Donated</p>
                    </div>
                    <div class="stat">
                        <i class="fas fa-users"></i>
                        <h3>50,000+</h3>
                        <p>People Fed</p>
                    </div>
                    <div class="stat">
                        <i class="fas fa-map-marker-alt"></i>
                        <h3>20+</h3>
                        <p>Cities Covered</p>
                    </div>
                    <div class="stat">
                        <i class="fas fa-hands-helping"></i>
                        <h3>500+</h3>
                        <p>Active Donors</p>
                    </div>
                </div>
            </div>
        </section>

        <section id="how-it-works" class="process">
            <div class="container">
                <h2>How Food Donation Works</h2>
                <div class="process-steps">
                    <div class="step">
                        <div class="step-icon">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <h3>Register</h3>
                        <p>Sign up in 2 minutes</p>
                    </div>
                    <div class="step">
                        <div class="step-icon">
                            <i class="fas fa-camera"></i>
                        </div>
                        <h3>List Food</h3>
                        <p>Share food details & photos</p>
                    </div>
                    <div class="step">
                        <div class="step-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <h3>Quick Pickup</h3>
                        <p>NGO partners collect food</p>
                    </div>
                    <div class="step">
                        <div class="step-icon">
                            <i class="fas fa-heart"></i>
                        </div>
                        <h3>Make Impact</h3>
                        <p>Track your contribution</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="testimonials">
            <div class="container">
                <h2>Success Stories</h2>
                <div class="testimonial-grid">
                    <div class="testimonial-card">
                        <img src="https://images.unsplash.com/photo-1542178243-bc20204b769f?ixlib=rb-4.0.3"
                            alt="Restaurant Owner">
                        <h3>Raj's Restaurant</h3>
                        <p>"We've donated over 1000 meals through Food Donate. The process is simple and knowing we're
                            helping the community while reducing waste is incredibly rewarding."</p>
                    </div>
                    <div class="testimonial-card">
                        <img src="https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?ixlib=rb-4.0.3"
                            alt="NGO Partner">
                        <h3>Feeding Smiles NGO</h3>
                        <p>"The platform has revolutionized how we source food donations. We can now help more people
                            than ever before."</p>
                    </div>
                </div>
            </div>
        </section>

        <section class="emergency-support">
            <div class="container">
                <h2>24/7 Support for Bulk Donations</h2>
                <p>Have large quantities of food to donate? Our team is available round the clock.</p>
                <div class="support-contacts">
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <span>+91 1800-FOOD-HELP</span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <span>emergency@fooddonate.org</span>
                    </div>
                </div>
                <a href="/donate" class="btn primary">Contact for Bulk Donation</a>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="/home">Home</a></li>
                        <li><a href="/about">About Us</a></li>
                        <li><a href="/donate">Donate Food</a></li>
                        <li><a href="/contact">Contact</a></li>
                        <li><a href="/login">Login</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Follow Us</h3>
                    <div class="follow-content">
                        <div class="social-links">
                            <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                            <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                            <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                        </div>
                        <div class="contact-infos">
                            <p><i class="fas fa-envelope"></i> info@fooddonate.org</p>
                            <p><i class="fas fa-phone"></i> +91 1800-FOOD-HELP</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 Food Donate. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        hamburger = document.querySelector(".hamburger");
        hamburger.onclick = function () {
            navBar = document.querySelector(".nav-bar");
            navBar.classList.toggle("active");
        }

        // Animation on scroll
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate-fade-in');
                }
            });
        });

        // Observe sections
        document.querySelectorAll('.donation-types, .impact, .process, .testimonials, .emergency-support').forEach(section => {
            observer.observe(section);
        });

        // Animate cards on scroll
        const cardObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animationDelay = Math.random() * 0.5 + 's';
                    entry.target.classList.add('animate-slide-up');
                }
            });
        });

        document.querySelectorAll('.donation-card, .stat, .step, .testimonial-card').forEach(card => {
            cardObserver.observe(card);
        });
    </script>
</body>

</html>